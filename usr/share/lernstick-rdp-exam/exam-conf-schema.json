{
  "type": "object",
  "required": [
    "version",
    "exam_type",
    "name",
    "expiration"
  ],
  "oneOf": [
    {
      "properties": {
        "version": {
          "type": "integer"
        },
        "exam_type": {
          "const": "dummy"
        },
        "name": {
          "type": "string"
        },
        "expiration": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    },
    {
      "properties": {
        "version": {
          "type": "integer"
        },
        "exam_type": {
          "const": "web"
        },
        "name": {
          "type": "string"
        },
        "expiration": {
          "type": "integer"
        },
        "instance_id": {
          "type": "string"
        },
        "instance_token": {
          "type": "string"
        },
        "web_url": {
          "type": "string",
          "format": "uri"
        },
        "lms_examination_key": {
          "type": "string"
        },
        "browser_settings" : {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          }
        },
        "network_profile": {
          "type": "object",
          "properties": {
            "proxy": {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "string",
                "format": "regex"
              }
            }
          },
          "dependentRequired": {
            "network_profile": [
              "proxy"
            ]
          },
          "additionalProperties": false
        }
      },
      "dependentRequired": {
        "exam_type": [
          "web_url",
          "lms_examination_key",
          "browser_settings",
          "network_profile",
          "instance_id",
          "instance_token"
        ]
      },
      "additionalProperties": false
    },
    {
      "properties": {
        "version": {
          "type": "integer"
        },
        "exam_type": {
          "const": "vm"
        },
        "name": {
          "type": "string"
        },
        "expiration": {
          "type": "integer"
        },
        "instance_id": {
          "type": "string"
        },
        "instance_token": {
          "type": "string"
        },
        "vm_server": {
          "anyOf": [
            {
              "type": "string",
              "format": "hostname"
            },
            {
              "type": "string",
              "format": "ipv4"
            },
            {
              "type": "string",
              "format": "ipv6"
            }
          ]
        },
        "vm_user": {
          "type": "string"
        },
        "vm_password": {
          "type": "string"
        }
      },
      "dependentRequired": {
        "exam_type": [
          "vm_server",
          "vm_user",
          "vm_password",
          "instance_id",
          "instance_token"
        ]
      },
      "additionalProperties": false
    }
  ]
}
